    <script>
      $(document).ready(function () {
        let dataTable;
        const processingOverlay = $('#processing-overlay');
        let isInitialLoad = true;
        let hasData = false;

        // Fungsi untuk menampilkan loading
        function showProcessing() {
          processingOverlay.show();
        }

        // Fungsi untuk menyembunyikan loading
        function hideProcessing() {
          processingOverlay.hide();
        }

        // Isi dropdown tahun dari 2010 sampai sekarang
        const tahunSelect = document.getElementById("filter-tahun");
        const tahunSekarang = new Date().getFullYear();
        for (let tahun = 2024; tahun <= tahunSekarang; tahun++) {
          const option = document.createElement("option");
          option.value = tahun;
          option.textContent = tahun;
          tahunSelect.appendChild(option);
        }

        // Inisialisasi DataTable tanpa memuat data
        function initializeDataTable() {
          dataTable = $('#multi-filter-select').DataTable({
            processing: true,
            serverSide: true,
            deferLoading: 0,
            ajax: {
              url: '/api/data',
              type: 'GET',
              data: function (d) {
                // Ambil nilai filter
                d.kabupaten = $('#filter-kabupaten').val();
                d.kecamatan = $('#filter-kecamatan').val();
                d.metode_penebusan = $('#filter-metode-penebusan').val();
                
                // Handle filter tanggal
                const bulan = $('#filter-bulan').val();
                const tahun = $('#filter-tahun').val();
                const bulanAwal = $('#periode-bulan-awal').val();
                const bulanAkhir = $('#periode-bulan-akhir').val();

                if (bulanAwal && bulanAkhir && tahun) {
                  d.bulan_awal = `${tahun}-${bulanAwal}`;
                  d.bulan_akhir = `${tahun}-${bulanAkhir}`;
                } else if (bulan && tahun) {
                  d.bulan = bulan;
                  d.tahun = tahun;
                } else if (tahun) {
                  d.tahun = tahun;
                }
              },
              beforeSend: function() {
                showProcessing();
              },
              complete: function() {
                hideProcessing();
              },
              error: function(xhr, error, thrown) {
                hideProcessing();
                console.error('Error loading data:', error);
                alert('Terjadi kesalahan saat memuat data. Silakan coba lagi.');
              }
            },
            columns: [
              { data: 'kabupaten' },
              { data: 'kecamatan' },
              { data: 'kode_kios' },
              { data: 'nama_kios' },
              { data: 'nik' },
              { data: 'nama_petani' },
              { data: 'metode_penebusan' },
              { 
                data: 'tanggal_tebus',
                render: function(data) {
                  return new Date(data).toLocaleDateString('id-ID');
                }
              },
              { data: 'urea', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'npk', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'sp36', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'za', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'npk_formula', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'organik', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'organik_cair', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'kakao', render: $.fn.dataTable.render.number(',', '.', 0, '') },
              { data: 'status' }
            ],
            language: {
              processing: "Memproses...",
              search: "Cari:",
              lengthMenu: "Tampilkan _MENU_ data per halaman",
              info: "Menampilkan _START_ sampai _END_ dari _TOTAL_ data",
              infoEmpty: "Menampilkan 0 sampai 0 dari 0 data",
              infoFiltered: "(disaring dari _MAX_ total data)",
              zeroRecords: "Tidak ditemukan data yang sesuai",
              paginate: {
                first: "Pertama",
                last: "Terakhir",
                next: "Selanjutnya",
                previous: "Sebelumnya"
              }
            },
            initComplete: function() {
              hideProcessing();
              if (hasData) {
                updateSum();
                updateDataInfo();
              }
            },
            drawCallback: function() {
              hideProcessing();
              if (hasData) {
                updateSum();
                updateDataInfo();
              }
            }
          });
          
          // Nonaktifkan ajax saat inisialisasi pertama
          dataTable.ajax.url(null);
        }

        // Fungsi untuk memuat data
        function loadData() {
  const tahun = $('#filter-tahun').val();
  const bulan = $('#filter-bulan').val();
  const bulanAwal = $('#periode-bulan-awal').val();
  const bulanAkhir = $('#periode-bulan-akhir').val();

  const isPeriodeFilled = bulanAwal || bulanAkhir;
  const isPeriodeComplete = bulanAwal && bulanAkhir;

  // Wajib pilih tahun
  if (!tahun) {
    alert('Harap pilih tahun terlebih dahulu');
    return;
  }

  // Kalau periode diisi sebagian, kasih peringatan
  if (isPeriodeFilled && !isPeriodeComplete) {
    alert('Harap lengkapi periode bulan (awal dan akhir)');
    return;
  }

  // Kalau periode lengkap, validasi bulan awal <= akhir
  if (isPeriodeComplete && bulanAwal > bulanAkhir) {
    alert('Bulan awal tidak boleh lebih besar dari bulan akhir');
    return;
  }

  // Load data
  if (dataTable) {
    isInitialLoad = false;
    hasData = true;
    $('#download-excel').prop('disabled', false);
    dataTable.ajax.url('/api/data').load();
    updateSum();
    updateDataInfo();
  }
}


        // Fungsi untuk update info data
        function updateDataInfo() {
          const kabupaten = $('#filter-kabupaten').val() || 'Semua Kabupaten';
          const kecamatan = $('#filter-kecamatan').val() || 'Semua Kecamatan';
          const metode = $('#filter-metode-penebusan').val() || 'Semua Metode';
          const tahun = $('#filter-tahun').val();
          const bulan = $('#filter-bulan').val();
          const bulanAwal = $('#periode-bulan-awal').val();
          const bulanAkhir = $('#periode-bulan-akhir').val();
          
          let periodeText = '';
          if (bulanAwal && bulanAkhir && tahun) {
            periodeText = `Periode ${bulanAwal}-${bulanAkhir} ${tahun}`;
          } else if (bulan && tahun) {
            const bulanNames = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
            periodeText = `${bulanNames[parseInt(bulan)-1]} ${tahun}`;
          } else if (tahun) {
            periodeText = `Tahun ${tahun}`;
          }
          
          $('#data-info').text(`${kabupaten} - ${kecamatan} - ${metode} - ${periodeText}`);
        }

        // Fungsi untuk update total
        function updateSum() {
          showProcessing();
          
          const params = {
            kabupaten: $('#filter-kabupaten').val(),
            kecamatan: $('#filter-kecamatan').val(),
            metode_penebusan: $('#filter-metode-penebusan').val(),
            tahun: $('#filter-tahun').val(),
            bulan: $('#filter-bulan').val(),
            bulan_awal: $('#periode-bulan-awal').val(),
            bulan_akhir: $('#periode-bulan-akhir').val()
          };

          if (params.bulan_awal && params.bulan_akhir && params.tahun) {
            params.bulan_awal = `${params.tahun}-${params.bulan_awal}`;
            params.bulan_akhir = `${params.tahun}-${params.bulan_akhir}`;
          }

          $.ajax({
            url: '/api/data/sum',
            type: 'GET',
            data: params,
            success: function(response) {
              $('#sum-urea-text').text(response.urea?.toLocaleString('id-ID') || '0');
              $('#sum-npk-text').text(response.npk?.toLocaleString('id-ID') || '0');
              $('#sum-sp36-text').text(response.sp36?.toLocaleString('id-ID') || '0');
              $('#sum-za-text').text(response.za?.toLocaleString('id-ID') || '0');
              $('#sum-npk-formula-text').text(response.npk_formula?.toLocaleString('id-ID') || '0');
              $('#sum-organik-text').text(response.organik?.toLocaleString('id-ID') || '0');
              $('#sum-organik-cair-text').text(response.organik_cair?.toLocaleString('id-ID') || '0');
              $('#sum-kakao-text').text(response.kakao?.toLocaleString('id-ID') || '0');
              
              // Update info filter yang aktif
              $('#sum-kabupaten').text(params.kabupaten || 'Semua Kabupaten');
              $('#sum-kecamatan').text(params.kecamatan || 'Semua Kecamatan');
              $('#sum-metode').text(params.metode_penebusan || 'Semua Metode');
              
              if (params.bulan_awal && params.bulan_akhir) {
                $('#sum-tanggal').text(`Periode ${params.bulan_awal} s/d ${params.bulan_akhir}`);
              } else if (params.bulan && params.tahun) {
                const bulanNames = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
                $('#sum-tanggal').text(`${bulanNames[parseInt(params.bulan)-1]} ${params.tahun}`);
              } else if (params.tahun) {
                $('#sum-tanggal').text(`Tahun ${params.tahun}`);
              } else {
                $('#sum-tanggal').text('Semua Tanggal');
              }
            },
            error: function() {
              alert('Gagal memuat total data');
            },
            complete: function() {
              hideProcessing();
            }
          });
        }

        // Event handler untuk filter
        function setupFilterEvents() {
          // Reset filter tanggal saat memilih opsi yang berbeda
          $('#filter-tahun').on('change', function() {
            $('#filter-bulan').val('');
            $('#periode-bulan-awal').val('');
            $('#periode-bulan-akhir').val('');
          });

          $('#filter-bulan').on('change', function() {
            $('#periode-bulan-awal').val('');
            $('#periode-bulan-akhir').val('');
          });

          $('#periode-bulan-awal, #periode-bulan-akhir').on('change', function() {
            $('#filter-bulan').val('');
          });
          
          // Tombol Muat Data
          $('#load-data-btn').on('click', function() {
            loadData();
          });
          
          // Tombol Reset Filter
          $('#reset-filters').on('click', function() {
            $('.filter-dropdown').val('');
            $('#filter-tahun').val('');
            $('#filter-bulan').val('');
            $('#periode-bulan-awal').val('');
            $('#periode-bulan-akhir').val('');
            $('#download-excel').prop('disabled', true);
            $('#data-info').text('Data belum dimuat');
            
            if (dataTable && hasData) {
              dataTable.clear().draw();
              hasData = false;
              
              // Reset summary
              $('#sum-urea-text').text('0');
              $('#sum-npk-text').text('0');
              $('#sum-sp36-text').text('0');
              $('#sum-za-text').text('0');
              $('#sum-npk-formula-text').text('0');
              $('#sum-organik-text').text('0');
              $('#sum-organik-cair-text').text('0');
              $('#sum-kakao-text').text('0');
              $('#sum-kabupaten').text('-');
              $('#sum-kecamatan').text('-');
              $('#sum-metode').text('-');
              $('#sum-tanggal').text('-');
            }
          });
        }

        // Load data filter options
        function loadFilterOptions() {

          $.ajax({
            url: '/api/filters',
            type: 'GET',
            success: function(data) {
              // Isi dropdown kabupaten
              const kabupatenSelect = $('#filter-kabupaten');
              data.kabupaten.forEach(item => {
                kabupatenSelect.append(`<option value="${item}">${item}</option>`);
              });

              // Isi dropdown kecamatan
              const kecamatanSelect = $('#filter-kecamatan');
              data.kecamatan.forEach(item => {
                kecamatanSelect.append(`<option value="${item}">${item}</option>`);
              });

              // Isi dropdown metode penebusan
              const metodeSelect = $('#filter-metode-penebusan');
              data.metode_penebusan.forEach(item => {
                metodeSelect.append(`<option value="${item}">${item}</option>`);
              });

              // Inisialisasi DataTable setelah filter dimuat
              initializeDataTable();
              setupFilterEvents();
            },
            error: function() {
              alert('Gagal memuat opsi filter');
            },
            complete: function() {
              hideProcessing();
            }
          });
        }

        // Download Excel
        $('#download-excel').on('click', function() {
          if (!hasData) {
            alert('Tidak ada data yang bisa didownload. Silakan muat data terlebih dahulu.');
            return;
          }
          
          showProcessing();
          
          const params = {
            kabupaten: $('#filter-kabupaten').val(),
            kecamatan: $('#filter-kecamatan').val(),
            metode_penebusan: $('#filter-metode-penebusan').val(),
            tahun: $('#filter-tahun').val(),
            bulan: $('#filter-bulan').val(),
            bulan_awal: $('#periode-bulan-awal').val(),
            bulan_akhir: $('#periode-bulan-akhir').val()
          };

          if (params.bulan_awal && params.bulan_akhir && params.tahun) {
            params.bulan_awal = `${params.tahun}-${params.bulan_awal}`;
            params.bulan_akhir = `${params.tahun}-${params.bulan_akhir}`;
          }

          // Buat URL download
          let url = '/api/data/download?' + $.param(params);
          
          // Buat iframe untuk trigger download
          const iframe = document.createElement('iframe');
          iframe.style.display = 'none';
          iframe.src = url;
          document.body.appendChild(iframe);
          
          // Sembunyikan loading setelah beberapa detik (asumsi download selesai)
          setTimeout(function() {
            hideProcessing();
            document.body.removeChild(iframe);
          }, 3000);
        });

        // Mulai dengan memuat opsi filter
        loadFilterOptions();
      });
    </script>
