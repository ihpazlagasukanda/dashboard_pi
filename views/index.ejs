            kabupatenSelect.add(option);
          });
        }
      });
      
      // Trigger change event untuk mengisi awal
      provinsiSelect.dispatchEvent(new Event('change'));
    }
  });

  document.addEventListener("DOMContentLoaded", function () {
  const kabupatenSelect = document.getElementById("kabupatenSelect");
  const kecamatanSelect = document.getElementById("kecamatanSelect");
  const tahunSelect = document.getElementById("tahunSelect");
  const provinsiSelect = document.getElementById("provinsiSelect");
  const jenisAlokasiSelect = document.getElementById("jenisAlokasi");

  if (!kabupatenSelect || !kecamatanSelect || !tahunSelect || !jenisAlokasiSelect) {
    console.error("Dropdown filter tidak ditemukan di halaman.");
    return;
  }

  console.log("Semua elemen dropdown ditemukan. Memulai fetch...");

  // Fungsi untuk menampilkan/menyembunyikan spinner
  function toggleSpinner(show, element = null) {
    if (element) {
      // Untuk filter dropdown
      const spinner = element.querySelector('.filter-spinner') || 
                     (element.nextElementSibling && element.nextElementSibling.classList.contains('filter-spinner') ? 
                      element.nextElementSibling : null);
      
      if (show && !spinner) {
        const newSpinner = document.createElement('div');
        newSpinner.className = 'filter-spinner';
        element.parentNode.insertBefore(newSpinner, element.nextSibling);
      } else if (spinner) {
        spinner.style.display = show ? 'inline-block' : 'none';
      }
    } else {
      // Untuk card content
      const cards = document.querySelectorAll('.card-content');
      cards.forEach(card => {
        const spinner = card.querySelector('.card-spinner');
        const content = card.querySelector('.bg-light');
        
        if (spinner) {
          spinner.style.display = show ? 'block' : 'none';
        }
        
        if (content) {
          if (show) {
            content.classList.add('blur-content');
          } else {
            content.classList.remove('blur-content');
          }
        }
      });
    }
  }

  // Fungsi untuk menampilkan spinner pada filter tertentu
  function showFilterSpinner(filterElement) {
    toggleSpinner(true, filterElement);
  }

  // Fungsi untuk menyembunyikan semua spinner filter
  function hideAllFilterSpinners() {
    document.querySelectorAll('.filter-spinner').forEach(spinner => {
      spinner.style.display = 'none';
    });
  }

  // 🔹 Fetch SUM berdasarkan filter (Kabupaten, Kecamatan, Tahun)
  function fetchSum() {
    // Tampilkan spinner di semua card
    toggleSpinner(true);
    
    // Tampilkan spinner di filter yang sedang berubah
    const activeFilter = document.activeElement;
    if (activeFilter && activeFilter.classList.contains('form-select')) {
      showFilterSpinner(activeFilter);
    }

    let selectedKabupaten = kabupatenSelect.value;
    let selectedKecamatan = kecamatanSelect.value;
    let selectedTahun = tahunSelect.value;
    let selectedProvinsi = provinsiSelect.value;
    let selectedJenisAlokasi = jenisAlokasiSelect.value;

    let queryParams = new URLSearchParams({
      kabupaten: selectedKabupaten || "",
      kecamatan: selectedKecamatan || "",
      tahun: selectedTahun || "",
      provinsi: selectedProvinsi || "",
    });

    console.log("Fetching SUM dengan filter:", queryParams.toString());

    // Menggunakan Promise.all untuk menjalankan semua fetch secara paralel
    Promise.all([
      // Fetch SUM penebusan
      fetch(`/api/verval/summary?${queryParams}`).then(res => res.json()),
      
      // Fetch COUNT penebusan
      fetch(`/api/verval/count?${queryParams}`).then(res => res.json()),
      
      // Tentukan endpoint alokasi berdasarkan jenis alokasi yang dipilih
      selectedJenisAlokasi === "sk_bupati" 
        ? fetch(`/api/sk-bupati/alokasi?${queryParams}`).then(res => res.json())
        : fetch(`/api/erdkk/summary?${queryParams}`).then(res => res.json()),
      
      // Tentukan endpoint count alokasi
      selectedJenisAlokasi === "sk_bupati" 
        ? fetch(`/api/sk-bupati/count?${queryParams}`).then(res => res.json())
