  <script>
    // Set current date
    document.getElementById('current-date').textContent = new Date().toLocaleDateString('id-ID', {
      weekday: 'long',
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    });
    
    // Alpine.js Data and Functions
    function dashboard() {
      return {
        // Data properties
        kabupatenList: [],
        kecamatanList: [],
        selectedKabupaten: null,
        kabupatenInput: '',
        farmersData: [],
        filteredFarmers: [],
        searchTerm: '',
        kecamatanFilter: '',
        loading: false,
        totalItems: 0,
        
        // Pagination properties
        currentPage: 1,
        itemsPerPage: 20,
        debounceTimer: null,
        
        // Computed properties
        get paginatedFarmers() {
          const start = (this.currentPage - 1) * this.itemsPerPage;
          const end = start + this.itemsPerPage;
          return this.filteredFarmers.slice(start, end);
        },
        
        get totalPages() {
          return Math.ceil(this.filteredFarmers.length / this.itemsPerPage);
        },
        
        get pageRange() {
          const range = [];
          const start = Math.max(1, this.currentPage - 2);
          const end = Math.min(this.totalPages, start + 4);
          
          for (let i = start; i <= end; i++) {
            range.push(i);
          }
          return range;
        },
        
        get stats() {
          return this.filteredFarmers.reduce((acc, farmer) => {
            acc.sisa_urea += Number(farmer.sisa_urea) || 0;
            acc.sisa_npk += Number(farmer.sisa_npk) || 0;
            acc.sisa_npk_formula += Number(farmer.sisa_npk_formula) || 0;
            acc.sisa_organik += Number(farmer.sisa_organik) || 0;
            return acc;
          }, { sisa_urea: 0, sisa_npk: 0, sisa_npk_formula: 0, sisa_organik: 0 });
        },
        
        // Methods
        async init() {
          // Load kabupaten list from backend
          try {
            this.loading = true;
            const response = await fetch('/data/kabupaten-list');
            if (!response.ok) throw new Error('Gagal memuat daftar kabupaten');
            this.kabupatenList = await response.json();
          } catch (error) {
            console.error('Error loading kabupaten list:', error);
            alert('Gagal memuat daftar kabupaten: ' + error.message);
          } finally {
            this.loading = false;
          }
        },
        
        async selectKabupaten() {
          if (!this.kabupatenInput) return;
          
          this.selectedKabupaten = this.kabupatenInput;
          this.loading = true;
          
          try {
            // Coba endpoint khusus untuk mendapatkan semua data sekaligus
            let allData = [];
            
            try {
              // Coba endpoint khusus untuk semua data
              const response = await fetch(`/data/all-farmers?kabupaten=${encodeURIComponent(this.selectedKabupaten)}`);
              if (response.ok) {
                allData = await response.json();
              } else {
                throw new Error('Endpoint khusus tidak tersedia');
              }
            } catch (specialError) {
              console.log('Menggunakan endpoint pagination biasa');
              
              // Gunakan endpoint pagination biasa dengan limit besar
              const response = await fetch(`/data/farmers?kabupaten=${encodeURIComponent(this.selectedKabupaten)}&limit=1000`);
              if (!response.ok) throw new Error('Gagal memuat data petani');
              
              const data = await response.json();
              allData = data.data || [];
              
              // Jika data kurang dari total, ambil sisanya
              if (data.total > allData.length) {
                const remainingPages = Math.ceil((data.total - allData.length) / 1000);
                for (let page = 2; page <= remainingPages + 1; page++) {
                  const nextResponse = await fetch(`/data/farmers?kabupaten=${encodeURIComponent(this.selectedKabupaten)}&page=${page}&limit=1000`);
                  if (nextResponse.ok) {
                    const nextData = await nextResponse.json();
                    allData = [...allData, ...(nextData.data || [])];
                  }
                }
              }
            }
            
            this.farmersData = allData;
            this.totalItems = this.farmersData.length;
            
            // Extract kecamatan list - pastikan tidak ada duplikat dan nilai null
            const allKecamatan = this.farmersData.map(f => f.kecamatan).filter(k => k && k.trim() !== '');
            this.kecamatanList = [...new Set(allKecamatan)].sort();
            
            console.log('Jumlah kecamatan ditemukan:', this.kecamatanList.length);
            console.log('Total data:', this.totalItems);
            
            this.applyFilters();
          } catch (error) {
            console.error('Error loading data:', error);
            alert('Gagal memuat data petani: ' + error.message);
          } finally {
            this.loading = false;
          }
        },
        
        applyFilters() {
          let filtered = this.farmersData;
          
          // Apply search term filter
          if (this.searchTerm) {
            const term = this.searchTerm.toLowerCase();
            filtered = filtered.filter(f => 
              (f.nik && f.nik.toString().toLowerCase().includes(term)) || 
              (f.nama_petani && f.nama_petani.toLowerCase().includes(term))
            );
          }
          
          // Apply kecamatan filter
          if (this.kecamatanFilter) {
            filtered = filtered.filter(f => f.kecamatan === this.kecamatanFilter);
          }
          
          this.filteredFarmers = filtered;
          this.currentPage = 1;
        },
        
        debouncedSearch() {
          clearTimeout(this.debounceTimer);
          this.debounceTimer = setTimeout(() => {
            this.applyFilters();
          }, 300);
        },
        
        prevPage() {
          if (this.currentPage > 1) {
            this.currentPage--;
          }
        },
        
        nextPage() {
          if (this.currentPage < this.totalPages) {
            this.currentPage++;
          }
        },
        
        changeItemsPerPage() {
          this.currentPage = 1;
          this.applyFilters();
        },
        
        resetData() {
          this.farmersData = [];
