    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const fadeElements = document.querySelectorAll('.fade-in');
            
            const fadeInOnScroll = function() {
                fadeElements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 150;
                    
                    if (elementTop < window.innerHeight - elementVisible) {
                        element.classList.add('visible');
                        
                        if (element.querySelector('.data-fill')) {
                            const dataFills = element.querySelectorAll('.data-fill');
                            dataFills.forEach(fill => {
                                const width = fill.getAttribute('data-width');
                                fill.style.width = width + '%';
                            });
                        }
                    }
                });
            };
            
            fadeInOnScroll();
            window.addEventListener('scroll', fadeInOnScroll);
            
            const progressRings = document.querySelectorAll('.progress-ring-circle');
            progressRings.forEach(ring => {
                const progress = ring.getAttribute('data-progress');
                const circumference = 2 * Math.PI * 54;
                const offset = circumference - (progress / 100) * circumference;
                ring.style.strokeDashoffset = offset;
            });
            
            
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        const navbarHeight = document.querySelector('.navbar').offsetHeight;
                        const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
                        
                        window.scrollTo({
                            top: targetPosition,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            
            const helpButton = document.getElementById('help-button');
            const guideOverlay = document.getElementById('guide-overlay');
            const handCursor = document.getElementById('hand-cursor');
            const guideNotification = document.getElementById('guide-notification');
            
            let guideActive = false;
            let currentStep = 0;
            let guideTimeout;
            
            
            const guideSteps = [
                {
                    message: "Panduan dimulai...",
                    action: null
                },
                {
                    message: "Klik tombol 'Mulai Sekarang' untuk memulai proses",
                    target: "#mulai-sekarang",
                    action: "click",
                    scrollTo: true
                },
                {
                    message: "Jelajahi berbagai wilayah yang tersedia",
                    target: ".region-card:nth-child(1)",
                    action: "hover",
                    scrollTo: true
                },
                {
                    message: "Klik tombol 'Akses' untuk membuka wilayah tertentu",
                    target: ".akses-btn:nth-child(1)",
                    action: "click",
                    scrollTo: true
                },
                {
                    message: "Panduan selesai ✅",
                    action: "complete"
                }
            ];
            
            
            function startGuide() {
                guideActive = true;
                helpButton.classList.add('active');
                guideOverlay.classList.add('active');
                document.body.classList.add('guide-active'); 
                currentStep = 0;
                
                
                showNotification(guideSteps[currentStep].message);
                
                
                guideTimeout = setTimeout(nextStep, 2000);
            }
            
            
            function showNotification(message, isSuccess = false) {
                guideNotification.textContent = message;
                guideNotification.classList.add('active');
                
                if (isSuccess) {
                    guideNotification.classList.add('success');
                } else {
                    guideNotification.classList.remove('success');
                }
            }
            
            
            function hideNotification() {
                guideNotification.classList.remove('active');
            }
            
            
            function scrollToElement(selector) {
                const targetElement = document.querySelector(selector);
                
                if (!targetElement) {
                    console.error("Elemen target tidak ditemukan:", selector);
                    return Promise.resolve();
                }
                
                const navbarHeight = document.querySelector('.navbar').offsetHeight;
                const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - navbarHeight - 20;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
                
                
                return new Promise(resolve => {
                    setTimeout(resolve, 1000);
                });
            }
            
            
            function moveHandCursorToElement(selector, callback, action = "click") {
                const targetElement = document.querySelector(selector);
                
                if (!targetElement) {
                    console.error("Elemen target tidak ditemukan:", selector);
                    callback();
                    return;
                }
                
                
                const rect = targetElement.getBoundingClientRect();
                const targetX = rect.left + rect.width / 2;
                const targetY = rect.top + rect.height / 2;
                
                
                handCursor.classList.add('active');
                
                
                const startX = window.innerWidth / 2;
                const startY = window.innerHeight / 2;
                
                handCursor.style.left = startX + 'px';
                handCursor.style.top = startY + 'px';
                
                
                targetElement.classList.add('highlight-element');
                
                
                setTimeout(() => {
                    
                    handCursor.style.left = targetX + 'px';
                    handCursor.style.top = targetY + 'px';
                    
                    
                    setTimeout(() => {
                        
                        if (action === "click") {
                            handCursor.style.transform = 'scale(0.8)';
                            
                            
                            try {
                                const clickSound = new Audio("data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEARKwAAIhYAQACABAAAABkYXRhAgAAAAEA");
                                clickSound.volume = 0.3;
                                clickSound.play().catch(e => console.log("Tidak dapat memutar suara: ", e));
                            } catch (e) {
                                console.log("Browser tidak mendukung pemutaran suara otomatis");
                            }
                            
                            setTimeout(() => {
                                handCursor.style.transform = 'scale(1)';
                                
                                
                                setTimeout(() => {
                                    targetElement.classList.remove('highlight-element');
                                    callback();
                                }, 500);
                            }, 200);
                        } else {
                            
                            setTimeout(() => {
                                targetElement.classList.remove('highlight-element');
                                callback();
                            }, 1500);
                        }
                    }, 1000);
                }, 100);
            }
            
            
            function nextStep() {
                currentStep++;
                
                if (currentStep >= guideSteps.length) {
                    finishGuide();
                    return;
                }
                
                const step = guideSteps[currentStep];
                
                
                showNotification(step.message);
                
                
                if (step.target && step.scrollTo) {
                    scrollToElement(step.target).then(() => {
                        
                        moveHandCursorToElement(step.target, () => {
                            
                            guideTimeout = setTimeout(nextStep, 1000);
                        }, step.action);
                    });
                } else if (step.target) {
                    
                    moveHandCursorToElement(step.target, () => {
                        
                        guideTimeout = setTimeout(nextStep, 1000);
                    }, step.action);
                } else if (step.action === "complete") {
                    
                    guideTimeout = setTimeout(finishGuide, 2000);
                } else {
                    
                    guideTimeout = setTimeout(nextStep, 2000);
                }
            }
            
            
            function finishGuide() {
                guideActive = false;
                helpButton.classList.remove('active');
                guideOverlay.classList.remove('active');
                handCursor.classList.remove('active');
                document.body.classList.remove('guide-active'); 
                
                
                clearTimeout(guideTimeout);
                
                
                showNotification("Panduan selesai ✅", true);
                
                
                guideTimeout = setTimeout(() => {
                    hideNotification();
                }, 3000);
            }
            
            
            helpButton.addEventListener('click', function() {
                if (!guideActive) {
                    startGuide();
                } else {
                    
                    finishGuide();
                }
            });
            
            
            document.addEventListener('wheel', function(e) {
                if (guideActive) {
                    e.preventDefault();
                }
            }, { passive: false });
            
            
            document.addEventListener('keydown', function(e) {
                if (guideActive && (e.key === 'ArrowDown' || e.key === 'ArrowUp' || e.key === ' ' || e.key === 'PageDown' || e.key === 'PageUp')) {
                    e.preventDefault();
                }
            });
            
            
            setTimeout(() => {
                if (!guideActive) {
                    const helpButtonRect = helpButton.getBoundingClientRect();
                    const helpButtonX = helpButtonRect.left + helpButtonRect.width / 2;
                    const helpButtonY = helpButtonRect.top + helpButtonRect.height / 2;
                    
                    
                    handCursor.classList.add('active');
                    
                    
                    handCursor.style.left = '-100px';
                    handCursor.style.top = '-100px';
                    
                    
                    setTimeout(() => {
                        
                        handCursor.style.left = helpButtonX + 'px';
                        handCursor.style.top = helpButtonY + 'px';
                        
                        
                        setTimeout(() => {
                            
                            function animateClick() {
                                
                                handCursor.style.transform = 'scale(0.7)';
                                handCursor.style.opacity = '0.8';
                                
                                setTimeout(() => {
                                    
                                    handCursor.style.transform = 'scale(1)';
                                    handCursor.style.opacity = '1';
                                    
                                    
                                    setTimeout(() => {
                                        animateClick();
                                    }, 1500); 
                                }, 300); 
                            }
                            
                            
                            animateClick();
                            
                        }, 1000);
                    }, 100);
                }
            }, 3000);
        });
